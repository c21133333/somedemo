{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Python Script",
			"type": "shell",
			"command": "python",
			"args": [
				"src/main.py"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Build Executable",
			"type": "shell",
			"command": "pyinstaller",
			"args": [
				"--onefile",
				"src/mouse_recorder.py"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}